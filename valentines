<body>
  <canvas id="confettiCanvas"></canvas>

  <main class="card">
    <h1>babycakes, will you be my Valentine? üíò</h1>

    <section class="button-zone" id="zone">
      <button id="yesBtn" aria-label="Yes, I will be your Valentine">Yes üíñ</button>
      <button id="noBtn" aria-label="No">No üòè</button>
    </section>

    <div class="hint" id="hint">The ‚ÄúNo‚Äù button is feeling shy üòà</div>

    <section class="result" id="result">
      <h2>YAY! üíï</h2>
      <p>You just made this Valentine unforgettable üíê</p>
    </section>
  </main>

  <script>
    const zone = document.getElementById("zone");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const result = document.getElementById("result");
    const hint = document.getElementById("hint");
    const confettiCanvas = document.getElementById("confettiCanvas");

    function resizeCanvas() {
      const dpr = Math.max(1, window.devicePixelRatio || 1);
      confettiCanvas.width = window.innerWidth * dpr;
      confettiCanvas.height = window.innerHeight * dpr;
      confettiCanvas.style.width = "100vw";
      confettiCanvas.style.height = "100vh";
    }

    resizeCanvas();
    window.addEventListener("resize", resizeCanvas);
    document.addEventListener("visibilitychange", () => {
      if (!document.hidden) resizeCanvas();
    });

    const confettiInstance = confetti.create(confettiCanvas, {
      resize: false,
      useWorker: true
    });

    function heartConfetti() {
      const end = Date.now() + 2000;

      (function frame() {
        confettiInstance({
          particleCount: 10,
          spread: 120,
          startVelocity: 35,
          shapes: ["heart"],
          colors: ["#ff4d7d", "#ff1f68", "#ff8fb1"],
          origin: { x: Math.random(), y: Math.random() * 0.4 }
        });
        if (Date.now() < end) requestAnimationFrame(frame);
      })();
    }

    let yesScale = 1;
    let noTexts = ["No üòè", "Really?", "Are you sure?", "Come on üò≠", "Okay fine‚Ä¶"];

    function clamp(n, min, max) {
      return Math.max(min, Math.min(max, n));
    }

    function moveNo(px, py) {
      const z = zone.getBoundingClientRect();
      const b = noBtn.getBoundingClientRect();

      let dx = (b.left + b.width / 2) - px;
      let dy = (b.top + b.height / 2) - py;
      let mag = Math.hypot(dx, dy) || 1;
      dx /= mag;
      dy /= mag;

      let newLeft = (b.left - z.left) + dx * 180;
      let newTop  = (b.top - z.top) + dy * 180;

      noBtn.style.left = clamp(newLeft, 0, z.width - b.width) + "px";
      noBtn.style.top  = clamp(newTop, 0, z.height - b.height) + "px";
      noBtn.style.transform = "none";

      yesScale = Math.min(2.4, yesScale + 0.12);
      yesBtn.style.transform = translateY(-50%) scale(${yesScale});

      noBtn.textContent = noTexts.shift() || "You win üò≥";
    }

    zone.addEventListener("pointermove", e => {
      const b = noBtn.getBoundingClientRect();
      const d = Math.hypot(
        (b.left + b.width / 2) - e.clientX,
        (b.top + b.height / 2) - e.clientY
      );
      if (d < 150) moveNo(e.clientX, e.clientY);
    });

    yesBtn.addEventListener("click", () => {
      zone.style.display = "none";
      hint.style.display = "none";
      result.style.display = "block";
      resizeCanvas();
      heartConfetti();
    });
  </script>
</body>
</html>
